generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  username  String @unique
  email     String @unique
  password  String
  avatarUrl String
  bio       String

  // Relacionamentos
  posts Postagem[]
  likes RegistroCurtida[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Postagem {
  id              Int    @id @default(autoincrement())
  ownerPost       String
  description     String
  userId          Int
  numberLikes     Int @default(0)
  numberShares    Int  @default(0)
  backgroundColor String

  // Relacionamentos
  user       User                @relation(fields: [userId], references: [id])
  likes      RegistroCurtida[]
  categories RegistroCategoria[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("postagens")
}

model RegistroCurtida {
  id     Int @id @default(autoincrement())
  postId Int
  userId Int

  post Postagem @relation(fields: [postId], references: [id])
  user User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("registrosCurtidas")
}

model Categoria {
  id          Int    @id @default(autoincrement())
  description String

  registrosCategorias RegistroCategoria[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categorias")
}

model RegistroCategoria {
  id         Int    @id @default(autoincrement())
  postId     Int
  categoryId Int
  background String

  post     Postagem  @relation(fields: [postId], references: [id])
  category Categoria @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("registrosCategorias")
}
